<resources>



        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <style name="AppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>

            <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
            <item name="android:colorForeground">@color/white</item>
            <!--<item name="android:textColorHint">@color/text_hint</item>-->

        </style>

        <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
            <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
            <item name="android:textColorPrimary">@color/white</item>
        </style>

        <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="color">@color/white</item>
        </style>

        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />







        <style name="textbox" parent="@style/AppTheme.NoActionBar">
            <item name="android:textColor">@color/white</item>
            <item name="android:drawablePadding">@dimen/tendp</item>
            <item name="android:singleLine">true</item>
            <item name="android:textColorHint">@color/text_hint</item>
        </style>

        <style name="textbox_contactus" parent="@style/AppTheme.NoActionBar">
            <item name="android:drawablePadding">@dimen/tendp</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">@color/colorPrimary</item>
            <item name="android:textColorHint">@color/colorPrimary</item>
        </style>























        <style name="swipe_button">
            <item name="android:drawablePadding">@dimen/fivedp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/tensp</item>
            <item name="android:gravity">center_horizontal</item>
        </style>

        <style name="dashboard_title">
            <item name="android:textColor">@color/white</item>
            <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        </style>

        <style name="dashboard_sbutitle">
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">14sp</item>
        </style>

        <style name="table_title">
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">12sp</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="table_row">
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">12sp</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="dialog_ok_button">
            <item name="android:textColor">@color/dialog_line</item>
            <item name="android:textSize">16sp</item>
            <item name="android:paddingLeft">11dp</item>
            <item name="android:paddingRight">11dp</item>
            <item name="android:background">?android:attr/selectableItemBackground</item>
        </style>

        <style name="dialog_cancel_button">
            <item name="android:textColor">@color/gray_new</item>
            <item name="android:textSize">16sp</item>
            <item name="android:paddingLeft">11dp</item>
            <item name="android:paddingRight">11dp</item>
            <item name="android:background">?android:attr/selectableItemBackground</item>
        </style>






</resources>
