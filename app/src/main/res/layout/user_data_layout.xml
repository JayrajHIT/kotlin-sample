<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/tendp"

    android:background="@drawable/dataview_backgroung">
    <LinearLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/mar_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/tendp">

                <ImageView
                    android:src="@drawable/avtar_nav"
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/fourty_five_dp"
                    android:layout_height="@dimen/fourty_five_dp"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/tendp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Name :"

                        android:textColor="@color/gray_holo_dark"
                        android:textSize="@dimen/mar_15" />
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="gdfgdg"
                        android:textSize="15sp"
                        android:textColor="@color/gray_holo_dark"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Phone Number :"

                        android:textColor="@color/gray_holo_dark"
                        android:textSize="@dimen/mar_15" />
                    <TextView
                        android:id="@+id/txt_phoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gdfgdg"
                        android:textSize="@dimen/mar_15"
                        android:textColor="@color/gray_holo_dark"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_day_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender :"

                        android:textColor="@color/gray_holo_dark"
                        android:textSize="@dimen/mar_15" />
                    <TextView
                        android:layout_marginLeft="@dimen/fivedp"
                        android:id="@+id/txt_Gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_holo_dark"
                        android:textSize="@dimen/mar_15" />



                </LinearLayout>





            </LinearLayout>


        </LinearLayout>


    </LinearLayout>





</LinearLayout>